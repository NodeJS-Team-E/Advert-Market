extends ../_layout
block content
        div(class="collection")
            each advert in result.adverts
                div(class="row")
                    div(class="col s12 m7")
                            div(class="divider")
                            div(class="section")
                                h5(class="header")= advert.title
                            div(class="divider")
                            div(class="section")
                                div(class="card horizontal small hoverable")
                                    div(class="card-image")
                                        img(class="responsive-img" src=advert.vehicle.vehiclePicture[0])
                                    div(class="card-stacked")
                                        div(class="card-content")
                                            p="Manufacturer: " +  advert.vehicle.manufacturer
                                            p="Price: " + advert.vehicle.price + 'lv'
                                            p="Location: " + advert.location 
                                    
                                        div(class="card-action")
                                            a(href='/adverts/'+advert._id) Details

        if result.pagination.active
        nav(aria-label="navigation")
            ul.pagination
                if result.pagination.previous.active
                    li
                    a(href= "/adverts?page=" + result.pagination.previous.value + "&size=" + result.pagination.pageSize aria-label="Previous")
                        i(aria-hidden="true" class="material-icons tiny left") fast_rewind
                if result.pagination.next.active
                    li
                    a(href= "/adverts?page=" + result.pagination.next.value + "&size=" + result.pagination.pageSize aria-label="Next")
                        i(aria-hidden="true" class="material-icons tiny left") fast_forward