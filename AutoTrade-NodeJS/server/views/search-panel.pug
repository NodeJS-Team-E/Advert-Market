block content
  h4 Search adverts
  form(id="search" name="search" method="get" class="row")
    div(class="col s12")
      ul(class="searchBox" id="searchBox")
        li(class="category")
          div(class="input-field col s6" ) 
            strong Category: 
            select(name="cat" class="browser-default  grey lighten-3")
              option(selected="" value="Cars and SUV's") Cars and SUV's
              option(value="Trucks") Trucks 
              option(value="Motorcycles") Motorcycles
        li(class="sort")
          div(class="input-field col s6")        
            strong Sort By:
            select(name="sort" class="browser-default grey lighten-3") 
              option(selected="" value="1") Newest adverts  
              option(value="2") Price - largest 
              option(value="3") Price - lowest  
              option(value="4") Year
        li(class="maker")
          div(class="input-field col s6" )
            strong Manufacturer:
            select(id="manufacturer" class="browser-default grey lighten-3")
              option(value="" selected="selected") All Makes
              option(label="Acura" value="acura") Acura
