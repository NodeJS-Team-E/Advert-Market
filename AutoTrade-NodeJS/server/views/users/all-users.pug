extends ../_layout
block content
    each user in users
        div(class="row")
            div(class="col s12 m7")
                div(class="divider")
                div(class="section")
                    h5(class="header")= user.username
                div(class="divider")
                div(class="section")
                    div(class="card horizontal small hoverable")
                        div(class="card-image")
                            img(class="responsive-img" src=user.pictureUrl)
                        div(class="card-stacked")    
                            div(class="card-content")
                                p="Email " + user.email 
                                p="For contact " + user.phoneNumber 
                            div(class="card-action")
                                a(href="users/"+user.username) Details    
